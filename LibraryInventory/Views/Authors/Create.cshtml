@model LibraryInventory.Models.Author

@{
    ViewData["Title"] = "Registrar autor";
}

<h2>Registrar autor</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin: 1em auto !important;">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin: 1em auto !important;">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin: 1em auto !important;">
                <label asp-for="Books" class="control-label"></label>
                <select asp-for="Books" asp-items="ViewBag.AvailableBooks" name="selectedBooks" class="form-control" multiple></select>
            </div>
            <div class="form-group" style="margin: 1em auto !important;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}